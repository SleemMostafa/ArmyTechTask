@model List<InvoiceDetailsVM>

<figure>Invoice Data</figure>
<table class="table table-hover table-bordered">
    <tr class="text-center bg-dark" style="color:white;font-weight:600">
           <td>ID</td>
           <td>Name</td>
           <td>Count</td>
           <td>Price</td>
           <td>Customer</td>
           <td>Date</td>
           <td>Total Price</td>
           <td>Details</td>
       </tr>
    @foreach (var item in Model)
   {
         
       <tr class="text-center">
           <td>@item.Id</td>
           <td>@item.ItemName</td>
           <td>@item.ItemCount</td>
           <td>@item.ItemPrice</td>
           <td>@item.Customer</td>
           <td>@item.InvoiceDate</td>
           <td>@item.TotalPriceForProduct</td>
           <td><a href="/InvoiceDetails/GetOne/@item.Id" class="btn btn-primary">Detail</a></td>
       </tr>
   }
</table>