@model InvoiceDetailsVM

<figure>Invoice Data</figure>
<table class="table table-hover table-bordered">
    <tr class="text-center bg-dark" style="color:white;font-weight:600">
           <td>ID</td>
           <td>Name</td>
           <td>Count</td>
           <td>Price</td>
           <td>Customer</td>
           <td>Date</td>
           <td>Total Price</td>
       </tr> 
       <tr class="text-center">
           <td>@Model.Id</td>
           <td>@Model.ItemName</td>
           <td>@Model.ItemCount</td>
           <td>@Model.ItemPrice</td>
           <td>@Model.Customer</td>
           <td>@Model.InvoiceDate</td>
           <td>@Model.TotalPriceForProduct</td>
       </tr>
</table>